[Unit]
Description=RGB Xmas Tree controller + web UI
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{USER}}
WorkingDirectory={{INSTALL_DIR}}
ExecStart={{INSTALL_DIR}}/.venv/bin/python -m rgbxmastree --host 0.0.0.0 --port 8080 --config /var/lib/rgbxmastree/config.json
Restart=on-failure
RestartSec=2
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target


